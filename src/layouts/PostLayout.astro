---
import BaseLayout from './BaseLayout.astro';
import ReadingProgress from '../components/ReadingProgress.astro';

const { title, description, currentPath } = Astro.props;
---
<BaseLayout title={title} description={description} ogType="article" currentPath={currentPath}>
  <ReadingProgress />
  <div class="content">
    <h1 class="post-title">{title}</h1>
    {description && <p class="post-subtitle">{description}</p>}
    <slot />
  </div>
</BaseLayout>
